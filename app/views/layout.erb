<body>
  <header role="banner" class="mar-t-5">
    <h1 class="mainheading">Brian's Flashcards</h1>
  </header>

    <div>
      <nav class="mynav">
            <% if session[:user_id] %>
              <% user = User.find(session[:user_id]) %>

              <a href ="/profile"> <%= user.username %> </a> <%=" \n |"%>
              <a href="/logout"> logout</a>                  <%=" \n |"%>
              <a href="/"> home </a>                         <%=" \n"  %>
            <% else %>

              <a href="/register"> register </a>                     <%=" \n | "%>
              <a href="/users/new"> login </a>               <%=" \n | "%>
              <a href="/"> home </a>                    <%=" \n"  %>
            <% end %>
      </nav>
    </div>
    <%= yield %>
</body>
